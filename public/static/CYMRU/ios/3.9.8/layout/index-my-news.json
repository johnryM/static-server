{
    "$":"index",
    "content": ["/newsapps/mynews"],
    "emptyView": "BNMyNewsEmptyView",
    "padding":"{0,0,32,0}",
    "class": "BNSegmentedContainer",
    "defaultsKey": "myNewsTabIndex",
    "modules": [
                {"$":"myNewsByTimeGroup", "title": "Yn ôl amser", "limit" : 200},
                {"title": "Yn ôl pwnc",
                "class": "BNGroupingModule",
                "groupBy": "collection",
                "modules": [
                            {"$":"myNewsByTopicTitle"},
                            {"modes":["carousels"], "$":"myNewsByTopicCarousel"},
                            {"modes":["!carousels"],
                            "mode==compact":{"$":"myNewsByTopicNonCarousel"},
                            "mode!=compact":{"$":"myNewsByTopicOldStyle"}
                            },
                            {"$":"advert", "type":"banner", "groupOffsets":[0]},
                            {"$":"advert", "type":"mpu", "groupOffsets":[2]}
                            ]
                }
                ]
}

