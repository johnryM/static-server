{
    "$":"index",
    "content": ["/cps/news/front_page"],
    "modules": [

                {"$":"primaryItem",    "$secondary":"$st_top_stories"},
                {"$":"advert",         "type":"banner", "mode!=compact":{"paddingBottom":8}},
                {
                    "$secondary": ["bbc.mobile.news.group.cluster-1+"],
                    "limit": 4,
                    "summaries": "no",
                    "hideTopics": "no",
                    "mode!=compact": {
                        "cellsPerRow": 2,
                        "H": 2
                    },
                    "mode!=tablet": {
                        "$": "featureGroup",
                        "summaries": "no"
                    },
                    "mode==tablet": {
                        "$": "digestGroup",
                        "limit": 4,
                        "H": 2,
                        "cellsPerRow": 4,
                        "cellMargins": "{8,8,0,8}",
                        "padding": "{8,8,0,8}",
                        "mode==portrait": {
                            "orientation": "portrait"
                        },
                        "mode==landscape": {
                            "orientation": "landscapeWithFullWidthHeadline",
                            "imageWidth": 192
                        }
                    }
                },
                {"$":"secondaryItems", "$secondary":"$st_top_stories"},
                {"$":"otherItems",     "$secondary":"$st_top_stories", "modes":["compact"]},

                {"$":"avCarousel" ,    "modes":["!newstream_ten-to-watch" , "!tablet" ] },
                {"$":"avCarousel" ,    "modes":["tablet"] },

                {"$":"newstreamPromo",

                    "modes":["newstream_ten-to-watch" , "!tablet" ],
                    "titleText"     : "Videos of the day",
                    "strapLineText" : "Swipe through the latest news videos",
                    "errorText"     : "Please check your internet\nconnection and tap to retry",
                    "newstreamId"   : "ten-to-watch",
                    "style"         : "text-heading"
                },

                {"$":"otherItems",     "$secondary":"$st_top_stories", "modes":["!compact"]},

                {"$":"newstreamPromo",

                    "modes":["newstream_bbc-stories" , "!tablet" ],
                    "strapLineText" : "Your world revealed",
                    "errorText"     : "Please check your internet\nconnection and tap to retry",
                    "newstreamId"   : "bbc-stories",
                    "style"         : "image-heading"
                },

                {"$":"advert",         "type":"mpu"},

                {"$":"twoStackedVerticallyInPortraitAndHorizontallyInLandscape", "modes":["tablet"],
                "$1":[
                      {"$":"title", "title": "Also in the News", "contentLink": "/cps/news/also_in_the_news?title=Also%20in%20the%20News"},
                      {"$":"featureGroup_2col",  "limit":2, "$secondary":"$st_top_stories_also_in_the_news", "hideTopics": "yes"}
                      ],
                "$2":[
                      {"$":"title", "title":"The Reporters", "contentLink": "/cps/news/the_reporters?title=The%20Reporters"},
                      {"$":"featureGroup_2col", "limit":2, "secondary": "$st_the_reporters"}
                      ]
                },

                {"$":"title", "modes":["!tablet"], "title": "Also in the News", "contentLink": "/cps/news/also_in_the_news?title=Also%20in%20the%20News"},
                {"$":"tightGroup",        "modes":["!tablet"], "limit":2, "$secondary":"$st_top_stories_also_in_the_news"},

                {"$":"title",        "modes":["!tablet"], "title": "The Reporters", "contentLink": "/cps/news/the_reporters?title=The%20Reporters"},
                {"$":"tightGroup",   "modes":["!tablet"], "$secondary":"$st_the_reporters", "limit":2},

                {"$":"title", "title":"Features & Analysis"},
                {"$":"featureGroup",      "modes":["!tablet"], "$secondary":"$st_features", "limit":2},
                {"$":"featureGroup_2col", "modes":["!tablet"], "$secondary":"$st_features", "limit":10, "offset":2},
                {"$":"featuresSection",   "modes":["tablet"],  "$secondary":"$st_features"},

                {"$":"title", "title": "Explainers", "contentLink": "/cps/news/explainers?title=Explainers"},
                {"$":"tightGroup",        "modes":["!tablet"], "limit":2, "$secondary":"$st_ts_explainers"},
                {"$":"featureGroup_2col", "modes":["tablet"],  "limit":2, "$secondary":"$st_ts_explainers", "hideTopics": "yes"},

                {"$":"digestTitle", "title": "Sport", "contentLink": "/cps/sport/front-page?title=Sport"},
                {"$":"digestGroup", "$secondary": "$st_digest_sports_gnl", "mode==tablet":{"limit":4, "cellsPerRow":2, "cellMargins":"{2,8,2,8}"}},

                {"$":"twoDigestGroups", "$1":"$digestAfricaGnl",      "$2":"$digestAsiaGnl"},
                {"$":"twoDigestGroups", "$1":"$digestEuropeGnl",        "$2":"$digestLatinAmericaGnl"},
                {"$":"twoDigestGroups", "$1":"$digestMiddleEastGnl",    "$2":"$digestUSAndCanadaGnl"},
                {"$":"twoDigestGroups", "$1":"$digestBusinessGnl", "$2":"$digestHealthGnl"},
                {"$":"twoDigestGroups", "$1":"$digestTechnologyGnl", "$2":"$digestScienceGnl"},
                {"$":"twoDigestGroups", "$1":"$digestEntertainmentGnl", "$2":"$digestMagazineGnl"},
                {"$":"title", "title" : "Around the BBC"},
                {
                    "$":"normalGroup",
                    "$secondary" : ["bbc.mobile.news.group.verticals"],
                    "summaries":"no",
                    "allowIncompleteRows":true,
                    "limit":6,
                    "mode==tablet":{
                        "cellsPerRow":2,
                        "orientation":"landscape",
                        "cellMargins":"{4,8,0,8}",
                        "padding":"{4,8,0,8}",
                        "H":4,
                        "imageWidth": 146,
                        "textPadding":"{4,8,8,8}"
                    }
                },

                {"$":"title", "title": "In Pictures", "contentLink": "/cps/news/in_pictures?title=In%20Pictures"},
                {"$":"photosGroup"},

                {"$":"copyright"}
                ]
}
